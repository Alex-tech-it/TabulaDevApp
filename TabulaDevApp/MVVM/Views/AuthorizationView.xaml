<UserControl x:Class="TabulaDevApp.MVVM.Views.AuthorizationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabulaDevApp.MVVM.Views"
             xmlns:viewModel="clr-namespace:TabulaDevApp.MVVM.ViewModels"
             xmlns:view="clr-namespace:TabulaDevApp.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Border Background="#26262C">
        <Border CornerRadius="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <!--<Border.Effect>
                <DropShadowEffect BlurRadius="20"/>
            </Border.Effect>-->
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Авторизация"
                           FontSize="28"
                           TextAlignment="Center" 
                           Foreground="#FFF4F5F5"/>
                <TextBlock Text="Добро пожаловать в Tabula 
                           
                           Войдите в аккаунт, чтобы начать работать!"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Foreground="#8B8D92"
                           Margin="0 10"
                           MaxWidth="250"/>
                <TextBlock Text="Логин"
                           TextWrapping="Wrap"
                           TextAlignment="Left"
                           FontWeight="Bold"
                           Foreground="#C0C1C4"
                           Margin="4,0,0,2"
                           MaxWidth="250"/>
                <TextBox Width="250" Height="40"
                         Text="{Binding authorizationModel.Login}"
                         Style="{StaticResource TextBoxStyle}"
                         Margin="0 0 0 0" 
                         CaretBrush="#FFDEDEDE"/>
                <TextBlock Visibility="{Binding IsEmptyEmail, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="5 2 0 0"
                           Foreground="Red"
                           Text="Необходимо ввести логин"
                           FontSize="9"/>
                <TextBlock Text="Пароль"
                           TextWrapping="Wrap"
                           TextAlignment="Left"
                           FontWeight="Medium"
                           Foreground="#C0C1C4"
                           Margin="4,10,0,2"
                           MaxWidth="250"/>
                <PasswordBox Name="passwordBox"
                         Width="250" Height="40"
                         Style="{StaticResource PasswordBox}" CaretBrush="#FFDEDEDE"/>
                <TextBlock Visibility="{Binding IsEmptyPassword, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="5 2 0 5"
                           Foreground="Red"
                           Text="Необходимо ввести пароль"
                           FontSize="9"/>
                <TextBlock Visibility="{Binding EnterFlag, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="0 10 0 0"
                           HorizontalAlignment="Center"
                           Foreground="Red"
                           Text="Неверный логин или пароль"
                           FontSize="10"/>
                <Button Content="Войти" Width="250" Height="40"
                        Background="#555562"
                        TextBlock.FontWeight="Bold"
                        TextBlock.Foreground="White"
                        Margin="0 20 0 0"
                        Style="{StaticResource ButtonStyle}"
                        Command="{Binding NavigateHomeCommand}"
                        CommandParameter="{Binding ElementName=passwordBox}"/>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0 5 0 5">
                    <TextBlock Text="У вас нет аккаунта? "
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Foreground="#8B8D92"/>
                    <Button Content="Создать аккаунт"
                            FontSize="12"
                            FontWeight="Bold"
                            Style="{StaticResource PreviewNavigationButtonStyle}"
                            Command="{Binding NavigateRegistrationCommand}" Foreground="#FFF4F5F5"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Border>
</UserControl>
