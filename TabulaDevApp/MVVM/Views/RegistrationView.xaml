<UserControl x:Class="TabulaDevApp.MVVM.Views.RegistrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabulaDevApp.MVVM.Views"
             xmlns:viewModel="clr-namespace:TabulaDevApp.MVVM.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="White">
        <Border CornerRadius="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <!--<Border.Effect>
                <DropShadowEffect BlurRadius="20"/>
            </Border.Effect>-->
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Регистрация"
                           FontSize="28"
                           FontWeight="Bold"
                           TextAlignment="Center"/>
                <TextBlock Text="Для регистрации 
                           необходимо заполнить все поля"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Foreground="Gray"
                           Margin="0 10 0 0"
                           MaxWidth="250"/>
                <TextBlock Text="Email"
                           TextWrapping="Wrap"
                           TextAlignment="Left"
                           FontSize="11"
                           Foreground="Gray"
                           Margin="10 10 0 2"
                           MaxWidth="250"/>
                <TextBox Width="250" Height="35"
                         Text="{Binding registrationModel.Email}"
                         Style="{StaticResource TextBoxStyle}"
                         Margin="0 0 0 0"/>
                <TextBlock Text="Никнейм"
                           TextWrapping="Wrap"
                           TextAlignment="Left"
                           FontSize="11"
                           Foreground="Gray"
                           Margin="10 5 0 2"
                           MaxWidth="250"/>
                <TextBox Width="250" Height="35"
                         Text="{Binding registrationModel.Username}"
                         Style="{StaticResource TextBoxStyle}"
                         Margin="0 0 0 0"/>
                <TextBlock Text="Пароль"
                           TextWrapping="Wrap"
                           TextAlignment="Left"
                           FontSize="11"
                           Foreground="Gray"
                           Margin="10 5 0 2"
                           MaxWidth="250"/>
                <PasswordBox Width="250" Height="35"
                         Style="{StaticResource PasswordBox}"/>
                <TextBlock Text="Подтверждение пароля"
                           TextWrapping="Wrap"
                           TextAlignment="Left"
                           FontSize="11"
                           Foreground="Gray"
                           Margin="10 5 0 2"
                           MaxWidth="250"/>
                <PasswordBox Width="250" Height="35"
                         Style="{StaticResource PasswordBox}"
                         Margin="0 0 0 40"/>
                <Button Content="Зарегистрироваться" Width="250" Height="40"
                        Background="Black"
                        TextBlock.FontWeight="Bold"
                        TextBlock.Foreground="White"
                        Style="{StaticResource ButtonStyle}"
                        Command="{Binding NavigateHomeCommand}"/>
            </StackPanel>
        </Border>
    </Border>

</UserControl>
